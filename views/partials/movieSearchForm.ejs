<form action="<%= url %>" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOptions.title %>">
        </div>
        <div class="form-item">
            <label>Director</label>
            <input type="text" name="director" value="<%= searchOptions.director %>">
        </div>
        <div class="form-item">
            <label>Genre</label>
        <input type="text" name="genre" value="<%= searchOptions.genre %>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label>Released after</label>
        <input type="date" name="releasedAfter" value="<%= searchOptions.releasedAfter %>"> 
        </div>
        <div class="form-item">
            <label>Release before</label>
        <input type="date" name="releasedBefore" value="<%= searchOptions.releasedBefore %>">
        </div>
    </div>
    <div class="form-row form-row-end btn-row">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>