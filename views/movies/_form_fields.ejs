<div class="form-row">
    <div class="form-item">
        <label>Title</label>
        <input type="text" name="title" value="<%= movie.title %>">
    </div>
    <div class="form-item">
        <label>Director</label>
        <input type="text" name="director" value="<%= movie.director %>">   
    </div>
    <div class="form-item">
        <label>Genre</label>
        <input type="text" name="genre" value="<%= movie.genre %>"> 
    </div>
    <div class="form-item">
        <label>Release Date</label>
        <input type="date" name="releaseDate" value="<%= movie.releaseDate == null ? '' : movie.releaseDate.toISOString().split('T')[0] %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Movie image (URL)</label>
        <input type="text" name="imageUrl" value="<%= movie.imageUrl %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Summary</label>
        <textarea name="summary"><%= movie.summary %></textarea>   
    </div>
</div>