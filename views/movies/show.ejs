<h2  class="page-header"><%= movie.title %></h2>
<p>
    Directed by: <%= movie.director %> <br>
    Release date: <%= movie.releaseDate.toISOString().split('T')[0] %> <br>
    Genre: <%= movie.genre %> <br>
    Summary: <%= movie.summary %> <br>
</p>
<img src="<%= movie.imageUrl %>" alt="movie poster">
<br>
<div class="btn-row">
    <a class="btn btn-primary" href="/movies/<%= movie.id %>/edit">Edit</a> 
</div>
<br>
<%if(moreByDirector.length >= 1) { %> 
    <hr>
    <div>
        <h2  class="page-header">More from this director: <%= movie.director %></h2>
        <div class="movie-container"> 
        <% moreByDirector.forEach(item => { %>
            <%- include('../partials/movie', { movie: item }) %> 
        <% }) %>
        </div> 
    </div>
<% } %>
<%if(moreByGenre.length >= 1) { %> 
    <hr>
    <div>
        <h2  class="page-header">More from this genre: <%= movie.genre %></h2>
        <div class="movie-container"> 
        <% moreByGenre.forEach(item => { %>
            <%- include('../partials/movie', { movie: item }) %> 
        <% }) %>
        </div> 
    </div>
<% } %>